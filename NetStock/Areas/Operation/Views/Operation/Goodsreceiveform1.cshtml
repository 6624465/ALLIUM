@model NetStock.Contract.GoodsReceiveDetail

@using (Html.BeginForm("SaveGoodsreceiveform1", "Operation", FormMethod.Post, new { id = "frmGoodsReceiveForm1Modal", @class = "form-horizontal" }))
{

    <div class="box box-solid box-default">

        <!-- Header Title -->
        <div class="box-header with-border">
            <h3 class="box-title center ">Receipt for domestic goods</h3>
        </div>

        <!-- Body -->
        <div class="box-body">

            <fieldset class="form-horizontal">
                <div class="form-group row">
                    <label class="col-md-1 control-label input-sm">Product Name</label>
                    <div class="col-md-2" style="padding-top:8px">
                        @Model.ProductDescription

                    </div>
                    
                    <label class="col-md-1 control-label input-sm">Producer</label>
                    <div class="col-md-2" style="padding-top:8px">
                        @Request.QueryString["supplierName"]

                    </div>
                    <label class="col-md-1 control-label input-sm">Number</label>
                    <div class="col-md-2" style="padding-top:8px">
                        @*@Html.TextBoxFor(x => Model.Qty, new { @class = "form-control input-sm", placeholder = "Qty", @required = "required" })*@
                        @Model.Qty
                    </div>
                    <label class="col-md-1 control-label input-sm">Bag</label>
                    <div class="col-md-2" style="padding-top:8px">
                        @Model.UOM
                    </div>
                </div>                
                <div class="form-group row">
                    <ul class="list-unstyled">
                        <li>
                            <label class="control-label input-sm lblCss">1. Products</label>
                            <ul class="list-unstyled">
                                <li>
                                    <label class="control-label input-sm lblCss">1.1 See the transport condition.</label>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <label class="control-label input-sm lblCss">Because the goods in the country do not have to put containers. Have you noticed that there is a cover of the product completely?</label>
                        </li>
                        <li>
                            <label class="control-label input-sm lblCss">(Take a picture of a bus while there are 4 items on the car.)</label>
                        </li>
                    </ul>
                    <div class="col-md-4">
                        <span id="IsCovered1" class="rdoCss isCoveredCss @(Model.IsCovered ? "checked" : "")" data-value="true" data-name="IsCovered" onclick="toggleCheckBox(this)"></span>
                        <label for="IsCovered1" class="control-label input-sm lblCss">Neat (Cloth cover)</label>
                    </div>
                    <div class="col-md-4">
                        <span id="IsNotCovered1" class="rdoCss isCoveredCss @(Model.IsCovered ? "" : "checked")" data-value="false" data-name="IsCovered" onclick="toggleCheckBox(this)"></span>
                        <label for="IsNotCovered1" class="control-label input-sm lblCss">Untidy (No cover)</label>
                    </div>                    
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.TextAreaFor(x => Model.CoverRemarks, new { @class = "form-control input-sm", placeholder = "Remarks" })
                    </div>
                </div>
                <div class="form-group row">
                    <ul class="list-unstyled">
                        <li>
                            <ul class="list-unstyled">
                                <li>
                                    <label class="control-label input-sm lblCss">1.2 The item must check the nature of the product.</label>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <label class="control-label input-sm lblCss">Products sorted. (Photograph as evidence)</label>
                        </li>

                    </ul>
                    <div class="col-md-4">
                        <span id="IsSorted1" class="rdoCss isSortedCss @(Model.IsSorted ? "checked" : "")" data-value="true" data-name="IsSorted" onclick="toggleCheckBox(this)"></span>
                        <label for="IsSorted1" class="control-label input-sm lblCss">Neat</label>
                    </div>
                    <div class="col-md-4">
                        <span id="IsNotSorted1" class="rdoCss isSortedCss @(Model.IsSorted ? "" : "checked")" data-value="false" data-name="IsSorted" onclick="toggleCheckBox(this)"></span>
                        <label for="IsNotSorted1" class="control-label input-sm lblCss">Untidy</label>
                    </div>                    
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.TextAreaFor(x => Model.SortedRemarks, new { @class = "form-control input-sm", placeholder = "Remarks" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <span id="IsNotHumidity1" class="rdoCss isHumidityCss @(Model.IsHumidity ? "checked" : "")" data-value="true" data-name="IsHumidity" onclick="toggleCheckBox(this)"></span>
                        <label for="IsNotHumidity1" class="control-label input-sm lblCss">Not damp</label>
                    </div>
                    <div class="col-md-4">
                        <span id="IsHumidity1" class="rdoCss isHumidityCss @(Model.IsHumidity ? "" : "checked")" data-value="false" data-name="IsHumidity" onclick="toggleCheckBox(this)"></span>
                        <label for="IsHumidity1" class="control-label input-sm lblCss">Point </label>
                        <label class="control-label input-sm lblCss">(Photography and Non-Product To inform the supervisor. Or purchasing department immediately.)</label>
                    </div>
                </div>
                <div class="form-group row">
                    <ul class="list-unstyled">
                        <li>
                            <label class="control-label input-sm lblCss">Product characteristics</label>
                        </li>
                        <li>
                            <label class="control-label input-sm lblCss">Bag style and text in front of the bag. Same as the original bag.</label>
                        </li>
                    </ul>
                    <div class="col-md-4">
                        <span id="IsPhoto1" class="rdoCss isSameAsPhotoCss @(Model.IsSameAsPhoto ? "checked" : "")" data-value="true" data-name="IsSameAsPhoto" onclick="toggleCheckBox(this)"></span>
                        <label for="IsPhoto1" class="control-label input-sm lblCss">Follow the picture</label>
                    </div>
                    <div class="col-md-4">
                        <span id="IsNotPhoto1" class="rdoCss isSameAsPhotoCss @(Model.IsSameAsPhoto ? "" : "checked")" data-value="false" data-name="IsSameAsPhoto" onclick="toggleCheckBox(this)"></span>
                        <label for="IsNotPhoto1" class="control-label input-sm lblCss">Not exactly</label>
                        <label class="control-label input-sm lblCss">(Photography and Non-Product To inform the supervisor. Or purchasing department immediately.)</label>
                    </div>
                </div>
                <div class="form-group row">
                    <ul class="list-unstyled">
                        <li>
                            <label class="control-label input-sm lblCss">Cleanliness of the product / bag style is not torn</label>
                        </li>
                    </ul>
                    <div class="col-md-4">
                        <span id="IsClean1" class="rdoCss isCleanCss @(Model.IsClean ? "checked" : "")" data-value="true" data-name="IsClean" onclick="toggleCheckBox(this)"></span>
                        <label for="IsClean1" class="control-label input-sm lblCss">Clean / tidy</label>
                    </div>
                    <div class="col-md-4">
                        <span id="IsNotClean1" class="rdoCss isCleanCss @(Model.IsClean ? "" : "checked")" data-value="false" data-name="IsClean" onclick="toggleCheckBox(this)"></span>
                        <label for="IsNotClean1" class="control-label input-sm lblCss">Not clean and tear bags</label>
                    </div>
                    <ul class="list-unstyled">
                        <li>
                            <label class="control-label input-sm lblCss">(Photographed and sorted out do not receive goods that have problems. Inform supervisor Or purchasing department</label>
                        </li>
                    </ul>
                </div>
                <div class="form-group row">
                    <ul class="list-unstyled">
                        <li>
                            <label class="control-label input-sm lblCss">Clotting</label>
                        </li>
                    </ul>
                    <div class="col-md-4">
                        <span id="IsNotCompressed1" class="rdoCss isCompressedCss @(Model.IsCompressed ? "checked" : "")" data-value="true" data-name="IsCompressed" onclick="toggleCheckBox(this)"></span>
                        <label for="IsNotCompressed1" class="control-label input-sm lblCss">Non-clotting</label>
                    </div>
                    <div class="col-md-4">
                        <span id="IsCompressed1" class="rdoCss isCompressedCss @(Model.IsCompressed ? "" : "checked")" data-value="false" data-name="IsCompressed" onclick="toggleCheckBox(this)"></span>
                        <label for="IsCompressed1" class="control-label input-sm lblCss">Clump</label>
                        <label class="control-label input-sm lblCss">(Take a look at the weighing scale. Counting Report to supervisor or purchasing department.)</label>
                    </div>
                </div>
                <div class="form-group row">
                    <ul class="list-unstyled">
                        <li>
                            <label class="control-label input-sm lblCss">Product weight (From the weighing method and the attached receipt.)</label>
                        </li>
                    </ul>
                    <div class="col-md-4">
                        <span id="IsCorrect1" class="rdoCss isCorrectWeightCss @(Model.IsCorrectWeight ? "checked" : "")" data-value="true" data-name="IsCorrectWeight" onclick="toggleCheckBox(this)"></span>
                        <label for="IsCorrect1" class="control-label input-sm lblCss">Full weight</label>
                    </div>
                    <div class="col-md-4">
                        <span id="IsNotCorrect1" class="rdoCss isCorrectWeightCss @(Model.IsCorrectWeight ? "" : "checked")" data-value="false" data-name="IsCorrectWeight" onclick="toggleCheckBox(this)"></span>
                        <label for="IsNotCorrect1" class="control-label input-sm lblCss">Weight loss </label>
                        <label class="control-label input-sm lblCss">Weight loss (Take a look at the weighing scale. Counting Report to supervisor or purchasing department.)</label>
                    </div>
                </div>
                <div class="form-group row">

                    <label class="col-md-1 control-label input-sm">Product Name</label>
                    <div class="col-md-3">
                        @Html.TextBoxFor(x => Model.PalletQty, new { @class = "form-control input-sm numCss" })
                    </div>
                    <label class="col-md-1 control-label input-sm">Bag</label>
                    <div class="col-md-1">
                        @*@Html.DropDownListFor(x => Model.PalletUOM, Model.ProductsList, "Select UOM", new { @class = "form-control input-sm" })*@
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label class="control-label input-sm lblCss">Label every pallet. The label is from the purchasing department.</label>
                    </div>
                </div>
                
                <div class="form-group row" >
                    
                    <div class="col-md-10" style="border-top:1px solid black; border-bottom:1px solid black; margin-left:10px">
                        <label class="control-label input-sm lblCss">Note: The receipt must meet the standard set every time. If not meet the standards, the supervisor.</label><br />
                        <label class="control-label input-sm lblCss">If you have any questions, please do not hesitate to contact us.</label>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <hr />
            </fieldset>
        </div>

        <div class="box-footer">
            <div class="row  no-print">
                 
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;Save</button>
                        <button type="button" class="btn btn-primary btn-sm" onclick="backClick();"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp; Back </button>
                    </div>
                 
            </div>
        </div>

    </div>
    @Html.HiddenFor(x => x.DocumentNo)
    @Html.HiddenFor(x => x.PONo)
    @Html.HiddenFor(x => x.ProductCode)
    @Html.HiddenFor(x => x.UOM)

    @Html.HiddenFor(x => x.IsCovered)
    @Html.HiddenFor(x => x.IsSorted)
    @Html.HiddenFor(x => x.IsHumidity)
    @Html.HiddenFor(x => x.IsSameAsPhoto)
    @Html.HiddenFor(x => x.IsClean)
    @Html.HiddenFor(x => x.IsCompressed)
    @Html.HiddenFor(x => x.IsCorrectWeight)
    @Html.HiddenFor(x => x.IsSameAsPhoto)
    @Html.Hidden("branchId", TempData["branchId"])

}

<script type="text/javascript">
    function toggleCheckBox(el) {
        $('.' + el.classList[1]).removeClass('checked');
        $(el).addClass('checked')
        $('#' + $(el).data('name')).val($(el).data('value'));
    }

    function backClick() {
        location.href = '@Url.Content("~/Operation/GoodsReceiveDomestic")' + '?documentNo=' + '@Request.QueryString["documentNo"]' + '&branchID=' + '@Request.QueryString["branchId"]';
    }
</script>
